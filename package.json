{
  "name": "pageturn.js",
  "version": "1.0.0",
  "description": "PageTurn.js ? modern, framework-agnostic page turn engine with zero jQuery dependencies",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": [
    "./src/legacy/turn.ts"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "npm run build && npx http-server -p 8080 -o demo.html",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern src/legacy/** --no-warn-ignored",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "page-turn",
    "flipbook",
    "animation",
    "ui"
  ],
  "homepage": "https://pageturnjs.github.io/PageTurn.js/",
  "repository": {
    "type": "git",
    "url": "https://github.com/PageTurnJS/PageTurn.js.git"
  },
  "bugs": {
    "url": "https://github.com/PageTurnJS/PageTurn.js/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.7.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^27.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.3"
  }
}
