{
  "name": "pageturn.js",
  "version": "1.0.0",
  "description": "Modern, framework-agnostic page turn engine inspired by turn.js",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": [
    "./src/legacy/turn.ts"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern src/legacy/**",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "page-turn",
    "flipbook",
    "animation",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/turnjs/turn.js"
  },
  "bugs": {
    "url": "https://github.com/turnjs/turn.js/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "jquery": ">=3.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.1",
    "@types/jquery": "^3.5.30",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jquery": "^3.7.1",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.3"
  }
}
